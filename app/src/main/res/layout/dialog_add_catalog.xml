<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/catalog_addInput"

        android:layout_width="255dp"
        android:layout_height="wrap_content"

        android:autofillHints="@string/set_catalog_name"
        android:hint="@string/set_catalog_name"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="16dp" />

    <CheckBox
        android:id="@+id/catalog_checkboxAccess"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="219dp"
        android:layout_height="64dp"
        android:layout_below="@+id/catalog_addInput"

        android:text="@string/is_private"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="67dp" />


</androidx.constraintlayout.widget.ConstraintLayout>